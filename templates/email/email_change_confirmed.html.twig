{#
  Default template for the notification email sent after an email change is confirmed.

  Variables:
    - oldEmail: string — The previous email address
    - newEmail: string — The new email address
    - user: EmailChangeableInterface — The user who changed their email
#}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
</head>
<body>
    <h1>{{ 'verify_email_change.notification.confirmed_subject'|trans({}, 'verify_email_change') }}</h1>

    <p>{{ 'verify_email_change.notification.confirmed_body'|trans({'%old_email%': oldEmail, '%new_email%': newEmail}, 'verify_email_change') }}</p>
</body>
</html>
